@model BankingStuff.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.firstName) @Html.DisplayFor(model => model.lastName)</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var item in Model.Account)
        {
            <h3>Account:</h3>
            <tr>
                <td>
                    Konto: @Html.DisplayFor(modelItem => item.accountName)
                </td>
                <br />
                <td>
                    Balance: @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
               
                </td>
            </tr>
            <br />
            <br />
        }

        <h2>Schedule Payment</h2>
        @using (Html.BeginForm("MakeTransaction", "Transactions"))
        {
            <div class="form-group">
                <select name="accountID">
                    Select which one of your accounts you want to transfer money from:
                    @foreach (var item in Model.Account)
                    {
                        <option value="@item.accountID">@item.accountName</option>
                    }

    
                </select>
            </div>
            <br />

            <input type="submit" value="Make Transaction" class="btn btn-default" />


        }
</dl>
</div>
<p>

   @Html.ActionLink("Completed Bank Transactions", "CompletedTransactions", "Transactions")
    <br />
   @Html.ActionLink("Signout", "SignOut", "Customer")

</p>
