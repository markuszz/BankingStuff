@model BankingStuff.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.firstName) @Html.DisplayFor(model => model.lastName)</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var item in Model.Account)
        {
            <h3>Account:</h3>
            <tr>
                <td>
                    Konto: @Html.DisplayFor(modelItem => item.accountName)
                </td>
                <br />
                <td>
                    Balance: @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
               
                </td>
            </tr>
            <br />
            <br />
        }
       
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.customerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
