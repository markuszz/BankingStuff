@model List<BankingStuff.Models.Transaction>

@{
    ViewBag.Title = "showTransactions";
}

<h2>showTransactions</h2>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <h1>Future Transactions</h1>
        <table>
            <tr>
                <th>Receipient</th>
                <th>Amount</th>
                <th>Transaction Date</th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.transactionDate > DateTime.Now)
                {
                    <tr>
                        <td>@item.getFullNameOfTransactionRecipient(item)</td>                   
                        <td>@item.amount</td>
                        <td>@item.transactionDate</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.transactionID })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.transactionID })</td>

                    </tr>
                }
            }

        </table>
        <h1>Completed Transactions</h1>
        <table>
            <tr>
                <th>Receipient</th>
                <th>Amount</th>
                <th>Transaction Date</th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.transactionDate < DateTime.Now)
                {
                    <tr>
                        <td>@item.getFullNameOfTransactionRecipient(item)</td>
                        <td>@item.amount</td>
                        <td>@item.transactionDate</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.transactionID })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.transactionID })</td>

                    </tr>
                }

            }

        </table>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
