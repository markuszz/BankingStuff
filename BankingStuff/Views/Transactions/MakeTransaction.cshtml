@model BankingStuff.Models.Transaction

@{
    ViewBag.Title = "Make Transaction";
  
}



@section scripts
{
    <script type="text/javascript" src="~/Scripts/jquery-1.7.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}





<h1>Make Transaction</h1>

@using (Ajax.BeginForm("ShowAccounts", "Transactions",
                 new AjaxOptions
                 {
                     HttpMethod = "POST",
                     UpdateTargetId = "showAccounts",
                     InsertionMode = InsertionMode.Replace
                 }))
{

    <div class="form-inline">

            <lable>Recipient Person number:</lable>
            <input type="number" name="receiverCustomerID" value="" class="form-control" />
            <input type="submit" value="Find Accounts" class="btn btn-info" />
            
    
    </div>
}

@{Html.EndForm();}


        @using (Html.BeginForm("RegisterTransaction", "Transactions"))
        {

            <div class="form-horizontal">
                <div class="container">
                    <input type="text" value="@ViewBag.accountID" name="accountID" hidden />
                    <div id="showAccounts"></div>
                </div>


                <div class="container">
                    <div class="form-group">

                        <label class="control-label col-md-2">Amount:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        
                        <lable class="control-label col-md-2"><b>Date:</b></lable>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.transactionDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        }

      

